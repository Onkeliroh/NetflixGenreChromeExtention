{
  "manifest_version": 2,

  "name": "Netflix Genre Browser",
  "description": "This extention provides access to hidden netflix genre lists.",
  "version": "0.2",
  "author":"Daniel Pollack",
  "icons":{
    "16":"Images/icon16.png",
    "32":"Images/icon32.png",
    "64":"Images/icon64.png",
    "128":"Images/icon128.png"
  },

  "browser_action": {
    "default_icon": "Images/icon32.png",
    "default_popup": "ListView.html",
    "default_title": "Netflix Genre Browser"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "https://netflix.com/"
  ],
  "web_accessible_resources": [
      "css/style.css"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
